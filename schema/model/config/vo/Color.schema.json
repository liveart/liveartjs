{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://liveart/config/vo/Color.schema.json",
  "title": "Color",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Name of the color visible to end-users"
    },
    "value": {
      "type": "string",
      "minLength": 1,
      "description": "Hexadecimal value of the color"
    },
    "groups": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "description": "Name of a group the color belongs to"
      }
    }
  },
  "required": [
    "name",
    "value"
  ],
  "additionalProperties": false
}
