{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://liveart/service/design/DesignDataObject.schema.json",
  "title": "DesignDataObject",
  "type": "object",
  "version": "1.2",
  "properties": {
    "version": {
      "type": "string",
      "minLength": 1
    },
    "strict": {
      "type": "boolean"
    },
    "product": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "template": {
          "type": "string",
          "minLength": 1
        },
        "productColors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "name",
              "value"
            ],
            "additionalProperties": false
          }
        },
        "color": {
          "type": "string",
          "minLength": 1
        },
        "colorName": {
          "type": "string",
          "minLength": 1
        },
        "size": {
          "type": "object",
          "properties": {
            "width": {
              "type": "number"
            },
            "height": {
              "type": "number"
            }
          },
          "required": [
            "width",
            "height"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "id"
      ],
      "additionalProperties": false
    },
    "locations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "editableArea": {
            "type": "string"
          },
          "svg": {
            "type": "string"
          },
          "visible": {
            "type": "boolean",
            "default": true
          }
        },
        "required": [
          "name",
          "svg"
        ],
        "additionalProperties": false
      }
    },
    "fontsCSSUrl": {
      "type": "string",
      "minLength": 1
    },
    "quantities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "size": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          }
        },
        "required": [
          "quantity"
        ],
        "additionalProperties": false
      }
    },
    "prices": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "price": {
            "type": "string"
          },
          "isTotal": {
            "type": "boolean"
          }
        },
        "required": [
          "label",
          "price"
        ],
        "additionalProperties": false
      }
    },
    "namesNumbers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "numberText": {
            "type": "string"
          },
          "size": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "numberText",
          "size"
        ],
        "additionalProperties": false
      }
    },
    "notes": {
      "type": "string"
    },
    "design": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "shared",
            "saved",
            "ordered",
            "template",
            "design idea",
            "service"
          ]
        },
        "title": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "optionId": {
            "type": "string",
            "minLength": 1
          },
          "optionName": {
            "type": "string",
            "minLength": 1
          },
          "variationId": {
            "type": "string",
            "minLength": 1
          },
          "variationName": {
            "type": "string",
            "minLength": 1
          },
          "value": {
            "type": "boolean"
          }
        },
        "required": [
          "optionId",
          "optionName"
        ],
        "additionalProperties": false
      }
    },
    "guides": {
      "type": "object",
      "properties": {
        "horizontal": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "vertical": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      },
      "required": [
        "horizontal",
        "vertical"
      ],
      "additionalProperties": false
    },
    "productId": {
      "type": "string",
      "minLength": 1
    },
    "quote": {
      "$ref": "../quote/GetQuoteRequest.schema.json"
    }
  },
  "required": [
    "locations",
    "design"
  ],
  "additionalProperties": false
}
